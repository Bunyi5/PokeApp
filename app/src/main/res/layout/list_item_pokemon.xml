<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pokemon"
            type="com.example.pokeapp.database.Pokemon" />
        <variable
            name="clickListener"
            type="com.example.pokeapp.pokemon.recycle.PokemonListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(pokemon)}">

        <TextView
            android:id="@+id/textPokeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/basic_start_margin"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pokemonNameText="@{pokemon}" />

        <TextView
            android:id="@+id/textPokeUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/basic_start_margin"
            android:paddingBottom="@dimen/distance_between_elements"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textPokeName"
            app:pokemonUrlText="@{pokemon}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>